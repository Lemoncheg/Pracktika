        <Label x:Name="WordResult" Content="" HorizontalAlignment="Left" Height="49" Margin="256,238,0,0" VerticalAlignment="Top" Width="230" FontSize="20" FontWeight="Bold"/>
        <Button x:Name="NextButton" Content="Next" HorizontalAlignment="Left" Height="48" Margin="639,34,0,0" VerticalAlignment="Top" Width="73" Background="White" FontSize="18" FontWeight="Bold" Click="NextButton_Click"/>

    </Grid>
</Window>
